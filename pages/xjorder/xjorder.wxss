/* pages/xjorder/xjorder.wxss */
.xjorder-page{
  padding: 30rpx;
}
.name{
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
.item-name{
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.table-con{
  border: 1px solid #dcdcdc;
  border-bottom: none;
}
.table-tr{
  padding: 0 10rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #dcdcdc;
}
.table-td{
  line-height: 60rpx;
  height: 60rpx;
}
.table-right-border{
  border-right: 1px solid #dcdcdc;
  margin-right: 12rpx;
}
.table-td-short{
  width: 150rpx;
  font-size: 0;
}
.table-td-icon{
  font-size: 34rpx;
  width: 70rpx;
  text-align: center;
  display: inline-block;
}
.table-err{
  color: #ff0000;
}
.table-success{
  color: #00ff00;
}
.item-radio{
  border: 1px solid #dcdcdc;
  line-height: 60rpx;
}
.item-radio-active{
  border: 1px solid #00ff00;
  color: #00ff00;
}
.item-radio .item-radio-icon-active, .item-radio-active .item-radio-icon{
  display: none;
}
.item-radio-active .item-radio-icon-active{
  display: inline-block;
}
.item-radio-icon{
  vertical-align: middle;
  display: inline-block;
  margin-right: 16rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
}




.uploadContainer{
  padding: 10rpx;
  width: 100%;
  height: 620rpx;
}
.imgContainer{
  width: 100%;
  height: 370rpx;
  padding: 2rpx;
}
.page-section{
  width:100%;
  height: 250rpx;
}
.page-section .note{
  height: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: red;
  margin-bottom: 10rpx;
}
.noteContent{
  width: 98%;
  border:2rpx solid #ccc;
  height: 200rpx;
  padding: 0 5rpx;
  border-radius: 5rpx;
  box-shadow: 2rpx;
  margin-top: 5rpx;
}
.noteContent textarea{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.imageInfo {
  float:left;
  position:relative;
  border: 1rpx solid #ccc;
  border-radius: 2rpx;
  width: 23%;
  height: 175rpx;
  margin: 2rpx 6rpx;
}
.imageInfo image{
  width: 100%;
  height: 100%;
}
.delete-btn{
  position: absolute;
  top: 0;
  right: 0;
}
button {
  width: 100%;
  margin-top: 10rpx;
}


