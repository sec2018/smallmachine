/* pages/login/login.wxss */
page {
  background: white;
}

.page-login2 {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: -webkit-box;
  -webkit-box-align: center;
  -webkit-box-pack: center;
  padding-bottom: 30%;
  box-sizing: border-box;
}
  input {
    display: block;
    background: white;
    border-bottom: rpx(1) solid #f5f5f5;
    line-height: rpx2(50);
    height: rpx2(50);
    box-sizing: border-box;
    font-size: rpx2(14);
  }

  .btn {
    border-radius: pxrem(40);
    text-align: center;
    box-shadow: 0 pxrem(10) pxrem(20) 0   rgba( #FF5183,.3);
    line-height: pxrem(80);
    background: #FF5183;
    color: white;
    margin: pxrem(60) auto 0;
    font-size: pxrem(30);
  }

  image {
    width: rpx2(80);
    height: rpx2(80);
    border-radius: 50%;
    margin: 0 auto;
  }

  .name {
    font-size: rpx2(20);
    color: rgba(39, 38, 54, 1);
    line-height: rpx2(28);
    text-align: center;
    padding: rpx2(7) 0 rpx2(15);
  }

  .remind {
    color: red;
    text-align: center;
    margin-top: rpx2(15);
  }