/* pages/listdetail/listdetail.wxss */
.list-name-con{
  text-align: center;
}
.list-name{
  position: relative;
  display: inline-block;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  text-align: center;
}
.list-name::after, .list-name::before{
  position: absolute;
  content: '';
  top: 44rpx;
  height: 4rpx;
  width: 40rpx;
  background: #272636;
}
.list-name::after{
  left:-50rpx;
}
.list-name::before{
  right:-50rpx;
}
.table-name{
  margin: 30rpx 30rpx 0;
  background: #dcdcdc;
  padding: 20rpx 0;
}
.table-con{
  margin: 0 30rpx 30rpx;
  border: 1px solid #dcdcdc;
  border-bottom: none;
}
.table-tr{
  padding: 0 10rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #dcdcdc;
}
.table1-tr{
  padding:0;
}
.table1-tr-tit{
  padding: 0 10rpx;
}
.table1-tr-detail{
  background: #f1f1f1;
  overflow: hidden;
}
.table1-tr-detail-item{
  padding: 20rpx 30rpx;
}
.table-td{
  line-height: 60rpx;
  height: 60rpx;
}
.table-right-border{
  border-right: 1px solid #dcdcdc;
  margin-right: 12rpx;
}
.table-td-short{
  width: 150rpx;
}
.table1-td-short{
  width: 260rpx;
}
.mb0{
  margin-bottom: 0;
}
.mt0{
  margin-top:0;
}

.item-radio{
  border: 1px solid #dcdcdc;
  line-height: 60rpx;
}
.item-radio-active{
  border: 1px solid #00ff00;
  color: #00ff00;
}
.item-radio .item-radio-icon-active, .item-radio-active .item-radio-icon{
  display: none;
}
.item-radio-active .item-radio-icon-active{
  display: inline-block;
}
.item-radio-icon{
  vertical-align: middle;
  display: inline-block;
  margin-right: 16rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
}
.img-info{
  position: relative;
  width: 210rpx;
  height: 210rpx;
  margin: 0 10rpx 20rpx 10rpx;
  background: #f8f8f8;
}
.img-info image{
  width: 100%;
  height: 100%;
}
.img-delete{
  position: absolute;
  right: 0;
  top:0;
  padding: 10rpx;
  color: #ff0000;
  font-size: 32rpx;
}

.img-upload .img-upload-icon{
  padding-top: 60rpx;
  padding-bottom: 20rpx;
  font-size: 40rpx;
}