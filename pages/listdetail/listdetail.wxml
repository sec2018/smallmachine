                <text class="iconfont iconfontxuanxiang_weixuanze item-radio-icon"></text>{{' '+child.check_point.cretia_good}}
              </view>
              <view class="item-radio" data-type="normal" data-index="{{childInd}}" bindtap="handleXjResult">
                <text class="iconfont iconfontxuanxiang_yixuanze item-radio-icon item-radio-icon-active"></text>
                <text class="iconfont iconfontxuanxiang_weixuanze item-radio-icon"></text>{{' '+child.check_point.cretia_normal}}
              </view>
              <view class="item-radio g-mb20" data-type="perfect" data-index="{{childInd}}" bindtap="handleXjResult">
                <text class="iconfont iconfontxuanxiang_yixuanze item-radio-icon item-radio-icon-active"></text>
                <text class="iconfont iconfontxuanxiang_weixuanze item-radio-icon"></text>{{' '+child.check_point.cretia_perfect}}
              </view>
              <view class="item-radio" data-type="repair" data-index="{{childInd}}" bindtap="handleXjResult">
                <text class="iconfont iconfontxuanxiang_yixuanze item-radio-icon item-radio-icon-active"></text>
                <text class="iconfont iconfontxuanxiang_weixuanze item-radio-icon"></text>{{' '+child.check_point.cretia_repair}}
              </view>
               <view class="item-radio" data-type="replace" data-index="{{childInd}}" bindtap="handleXjResult">
                <text class="iconfont iconfontxuanxiang_yixuanze item-radio-icon item-radio-icon-active"></text>
                <text class="iconfont iconfontxuanxiang_weixuanze item-radio-icon"></text>{{' '+child.check_point.cretia_replace}}
              </view>

              <view class="item-name g-fw-bold">上传照片</view>
              <!-- 图片预览区域 -->
              <view class="img-container g-flex g-flex-wap">
                <view class='img-info'  wx:key="*this">
                    <image src="{{child.pic_url}}"data-index="{{index}}"mode="aspectFill" bindtap="previewImg"></image>
                    <view class="img-delete iconfont iconfontminus-circle" data-index="{{index}}" catchtap="deleteImg"></view>
                </view>
                <view class="img-info img-upload g-text-grey g-ta-ct" wx:if="{{imgs.length<1}}" bindtap="chooseImg">
                  <view class="iconfont iconfontxiangji img-upload-icon"></view>
                  <view>{{imgs.length}}/1</view>
                </view>
              </view>
            </view>
            <!-- <view class="iconfont iconfontangle-right"></view> -->
          </view>
    </view>
  </view>
